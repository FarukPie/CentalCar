@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Öne Çıkan";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Baslık</th>
        <th>Acıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="width:75px;height:75px" /></td>
            <td>@item.Title</td> 
            <td>@item.Description</td> 
            <td><a asp-action="DeleteBanner" asp-route-id="@item.BannerId" class="btn btn-danger">Sil</a></td>
            <td><a asp-action="UptadeBanner" asp-route-id="@item.BannerId" class="btn btn-info">Güncelle</a></td>


        </tr>
    }
</table>
<a asp-action="CreateBanner" asp-controller="AdminBanner" class="btn btn-primary">Yeni Öne Çıkan Alan Ekle</a>


